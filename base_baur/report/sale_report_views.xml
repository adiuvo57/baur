<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="base_baur_report_saleorder_document" inherit_id="sale.report_saleorder_document">
            <xpath expr="//t[@t-set='address']" position="before">
                <div class="row address">
                    <div class="col-4"><img class="img-fluid" src="/web/image/644-2ae27e1e/baur_logo_sz.png" style="width:150px;margin-left:80px" /></div>
                    <div class="col-4"><span>
                            <p>BAUR Insektenschutz AG<br />Eichenweg 11<br />3628 Uttigen<br /></p>
                        </span></div>
                    <div class="col-4">
                        <p>Tel.         033 345 07 77<br />Mail       info@baur-uttigen.ch<br />Web      www.baur-uttigen.ch<br />MWST  CHE-279.642.932</p>
                    </div>
                </div>
                <div class="row address">
                    <div class="col-5" />
                    <div class="col-5 offset-2">
                        <!--<div t-field="doc.partner_id" t-options-widget="'contact'" t-options-fields="['name', 'address', 'phone', 'mobile','x_studio_name2']"/>-->
                        <t t-if="doc.partner_id.name"><span t-field="doc.partner_id.name" /><br /></t>
                        <t t-if="doc.partner_id.x_studio_name2"><span t-field="doc.partner_id.x_studio_name2" /><br /></t>
                        <t t-if="doc.partner_id.street"><span t-field="doc.partner_id.street" /><br /></t>
                        <t t-if="doc.partner_id.street2"><span t-field="doc.partner_id.street2" /><br /></t>
                        <t t-if="doc.partner_id.zip"><span t-field="doc.partner_id.zip" /></t>
                        <t t-if="doc.partner_id.state_id.name"><span t-field="doc.partner_id.state_id.name" /></t>
                        <t t-if="doc.partner_id.city"><span t-field="doc.partner_id.city" /><br /></t>
                        <!--<t t-if="doc.partner_id.country_id.name"><span t-field="doc.partner_id.country_id.name"/><br/></t>-->
                    </div>
                </div>
                <div class="row address mb-5">
                    <div class="col-5">
                        <t t-if="doc.x_studio_rechnungsadresse_drucken and doc.partner_invoice_id">
                            <strong>Rechnungsadresse:</strong><br />
                            <t t-if="doc.partner_invoice_id.name"><span t-field="doc.partner_invoice_id.name" /><br /></t>
                            <t t-if="doc.partner_invoice_id.x_studio_name2"><span t-field="doc.partner_invoice_id.x_studio_name2" /><br /></t>
                            <t t-if="doc.partner_invoice_id.street"><span t-field="doc.partner_invoice_id.street" /><br /></t>
                            <t t-if="doc.partner_invoice_id.street2"><span t-field="doc.partner_invoice_id.street2" /><br /></t>
                            <t t-if="doc.partner_invoice_id.zip"><span t-field="doc.partner_invoice_id.zip" /></t>
                            <t t-if="doc.partner_invoice_id.state_id.name"><span t-field="doc.partner_invoice_id.state_id.name" /></t>
                            <t t-if="doc.partner_invoice_id.city"><span t-field="doc.partner_invoice_id.city" /><br /></t>
                        </t>
                    </div>
                    <div class="col-5">
                        <t t-if="doc.x_studio_lieferadresse_drucken and doc.partner_shipping_id">
                            <strong>Lieferadresse:</strong><br />
                            <t t-if="doc.partner_shipping_id.name"><span t-field="doc.partner_shipping_id.name" /><br /></t>
                            <t t-if="doc.partner_shipping_id.x_studio_name2"><span t-field="doc.partner_shipping_id.x_studio_name2" /><br /></t>
                            <t t-if="doc.partner_shipping_id.street"><span t-field="doc.partner_shipping_id.street" /><br /></t>
                            <t t-if="doc.partner_shipping_id.street2"><span t-field="doc.partner_shipping_id.street2" /><br /></t>
                            <t t-if="doc.partner_shipping_id.zip"><span t-field="doc.partner_shipping_id.zip" /></t>
                            <t t-if="doc.partner_shipping_id.state_id.name"><span t-field="doc.partner_shipping_id.state_id.name" /></t>
                            <t t-if="doc.partner_shipping_id.city"><span t-field="doc.partner_shipping_id.city" /><br /></t>
                        </t>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@id='informations']" position="replace">
                <div class="row">
                    <div class="col">
                        <span t-field="doc.date_order" t-options="{'widget':'date'}" />
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <span t-field="doc.user_id.x_studio_initialen" />
                    </div>
                </div>
                <div class="row">
                    <div style="margin-top:20px;margin-bottom:30px" class="col">
                        <span class="h3">Insektenschutz-Systeme</span>
                    </div>
                </div>
                <div class="row mb-4" t-if="doc.x_studio_ausmessen_liefern_und_montieren">
                    <div class="col">
                        <span class="">Ausmessen, liefern und montieren:</span>
                    </div>
                </div>
                <div class="row mb-4" t-if="doc.x_studio_reparieren_ersetzen_von">
                    <div class="col">
                        <span class="">Reparieren oder Ersatz von:</span>
                    </div>
                </div>
                <div class="row mb-4" t-if="doc.freier_text">
                    <div class="col">
                       <t t-raw="doc.freier_text"/>
                    </div>
                </div>
            </xpath>
            <xpath expr="//span[@t-field='doc.payment_term_id.note']" position="replace"/>
            <xpath expr="//div[@name='so_total_summary']//div[@id='total']" position="replace">
                <div id="total" class="row" name="total">
                    <div class="" style="width:50%;font-family: Roboto; font-size: 13.3333px;">
                        <table class="table table-borderless table-sm">
                            <tr>
                                <td>
                                    <p t-if="doc.payment_term_id" class="mb-5" style="margin-top: 18%">
                                        <span>Zahlung </span><span t-field="doc.payment_term_id" />
                                    </p>
                                </td>
                            </tr>
                        </table>
                        <table class="table table-borderless table-sm">
                            <tr style="line-height:1.5em;">
                                <td width="30%" class="p-0">
                                    <span t-if="doc.validity_date">Angebots<br/>gültigkeit:</span>
                                </td>
                                <td width="70%" class="p-0">
                                	<p style="margin-top:1.5em;" class="mb-0"><span t-esc="doc.validity_date" t-options="{&quot;widget&quot;: &quot;date&quot;}" /> (exkl. Sonderfarben)</p>
                                </td>
                            </tr>
                            <tr style="line-height:1.5em;">
                                <td class="p-0">
                                	<p t-if="doc.preise_sonderfarben"><span>Preise<br/>Sonderfarben:</span></p>
                                </td>
                                <td class="p-0">
                                	<p  style="margin-top:1.5em;" class="mb-0"><span> gültig 4 Wochen</span></p>
                                </td>
                            </tr>
                            <tr style="line-height:1em;">
                            	<td class="p-0">
                            		<p class="mb-1" t-if="doc.x_studio_preise_inkl_montage"><span>Preise:</span></p>
                            	</td>
                            	<td class="p-0">
                            		<p class="mb-1" ><span> inkl. Montage</span></p>
                            	</td>
                            </tr>
                            <tr style="line-height:1em;">
                            	<td class="p-0">
                            		<p class="mb-1" t-if="doc.preise_exkl_montage"><span>Preise:</span></p>
                            	</td>
                            	<td class="p-0">
                            		<p class="mb-1" ><span> exkl. Montage</span></p>
                            	</td>
                            </tr>
                        </table>
                        <table class="table table-borderless table-sm" style="line-height:0em;">
                            <tr style="line-height:0em;">
                                <td class="p-0" width="30%">
                                	<p t-if="doc.x_studio_lieferfrist"><span>Lieferfrist:</span></p>
                                </td>
                                <td class="p-0" width="70%">
                                	<p><span t-esc="doc.x_studio_lieferfrist"/></p>
                                </td>
                            </tr>
                            <tr style="line-height:0em;">
                            	<td class="p-0">
                            		<p t-if="doc.termin"><span>Termin:</span></p>
                            	</td>
                            	<td class="p-0">
                            		<p><span> nach Vereinbarung</span></p>
                            	</td>
                            </tr>
                            <tr style="line-height:0em;">
                            	<td class="p-0">
                            		<p t-if="doc.abholung"><span>Abholung:</span></p>
                            	</td>
                            	<td class="p-0">
                            		<p><span> ab Werkstatt, Uttigen</span></p>
                            	</td>
                            </tr>
                        </table>
                        <table class="table table-borderless table-sm">
                            <tr style="line-height:1.5em;">
                                <td class="p-0" width="30%">
                                    <p class="mb-1" t-if="doc.rabatt_5"><span>Rabatt:</span></p>
                                </td>
                                <td class="p-0" width="70%">
                                    <p class="mb-1" ><span> 5% ab einem Bestellwert von CHF 2'000.- exkl. Sonderfarben und exkl. Reparaturen</span></p>
                                </td>
                            </tr>
                            <tr style="line-height:1.5em;">
                            	<td class="p-0">
                            		<p t-if="doc.rabatt_10"><span>Rabatt:</span></p>
                            	</td>
                            	<td class="p-0">
                            		<p><span> 10% ab einem Bestellwert von CHF 3'000.- exkl. Sonderfarben und exkl. Reparaturen</span></p>
                            	</td>
                            </tr>
                            <tr style="line-height:1.5em;">
                            	<td class="p-0">
                            		<p t-if="doc.rabatt_40"><span>Rabatt:</span></p>
                            	</td>
                            	<td class="p-0">
                            		<p><span> 40% Wiederverkaufsrabatt exkl. Sonderfarben und exkl. Montage/Reparatur</span></p>
                            	</td>
                            </tr>
                            <tr style="line-height:1.5em;">
                            	<td class="p-0">
                            		<p t-if="doc.rabatt_u"><span>Rabatt:</span></p>
                            	</td>
                            	<td class="p-0">
                            		<p><span> 5% Uttiger Rabatt bereits in Abzug gebracht</span></p>
                            	</td>
                            </tr>
                            <tr style="line-height:1.5em;">
                            	<td class="p-0">
                            		<p t-if="doc.rabattierung"><span>Rabatt:</span></p>
                            	</td>
                            	<td class="p-0">
                            		<p><span> Alle Rabatte exkl. Farbzuschläge und exkl. Reparaur</span></p>
                            	</td>
                            </tr>
                        </table>
                        <table class="table table-borderless table-sm" style="line-height:1.5em;">
                        	<tr style="line-height:1.5em;">
                        		<td class="p-0" width="30%">
                        			<p t-if="doc.garantie"><span>Garantie:</span></p>
                        		</td>
                        		<td class="p-0" width="70%">
                        			<p><span> 3 Jahre Garantie auf Material (exkl. auf Gewebe)</span></p>
                        		</td>
                        	</tr>
                        	<tr style="line-height:1.5em;">
                        		<td class="p-0">
                        			<p t-if="doc.garantie_wiederverkaufer"><span>Garantie:</span></p>
                        		</td>
                        		<td class="p-0">
                        			<p><span> 3 Jahre Garantie auf Produkte (exkl. auf Gewebe<br/>Schäden durch unsachgemässe Montage sind nicht garantieberechtigt</span></p>
                        		</td>
                        	</tr>
                        </table>
                    </div>
                    <div style="width:50%">
                        <table class="table table-sm">
                            <!-- Tax totals -->
                            <t t-set="tax_totals" t-value="json.loads(doc.tax_totals_json)" />
                            <t t-call="account.document_tax_totals" />
                        </table>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>