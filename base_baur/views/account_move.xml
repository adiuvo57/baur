<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="base_baur_view_move_form_inherit" model="ir.ui.view">
        <field name="name">base.baur.view.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_reference']" position="after">
               <div class="o_row" colspan="6">
                    <field name="x_studio_ausmessen_liefern_und_montieren" nolabel="1"/>
                    <field name="ausmessen_liefern_und_montieren_text"/>
                </div>
                <div class="o_row" colspan="6">
                    <field name="x_studio_reparieren_ersetzen_von" nolabel="1"/>
                    <field name="reparieren_ersetzen_von_text"/>
                </div>
            </xpath>
           	<xpath expr="//notebook//page[last()]" position="after">
                <page name="page_konditionen" string="Baur Konditionen">
                    <group>
                    	<group>
                            <div class="o_row" colspan="6">
                                <field name="garantie" nolabel="1" string="Show Garantie"/>
                                <strong><field name="garantie_sep" nolabel="1"/></strong>
                            </div>
                            <field name="garantie_label" placeholder="Report label..." nolabel ="1" attrs="{'invisible': [('garantie', '=', False)]}"/>
                            <field name="garantie_text" placeholder="Report text..." nolabel ="1" attrs="{'invisible': [('garantie', '=', False)]}" colspan="4"/>                             
                            <div class="o_row" colspan="6">
                                <field name="garantie_wiederverkaufer" nolabel="1" string="Show Garantie WiederverkÃ¤ufer"/>
                                <strong><field name="garantie_wiederverkaufer_sep" nolabel="1"/></strong>
                            </div>
                            <field name="garantie_wiederverkaufer_label" placeholder="Report label..." nolabel ="1" attrs="{'invisible': [('garantie_wiederverkaufer', '=', False)]}"/>
                            <field name="garantie_wiederverkaufer_text" placeholder="Report text..." nolabel ="1" attrs="{'invisible': [('garantie_wiederverkaufer', '=', False)]}" colspan="4"/>
                        </group>
                    </group>
                    <group>
                        <field name="freier_text_block_id" string="Freier Text Block" no_create_edit="1" />
                        <field name="freier_text" string="Freier Text" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
