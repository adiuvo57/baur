                                <field name="rabatt_5_label"/>
                            </div>
                            <field name="rabatt_5_text" placeholder="Write rabatt 5% text..." nolabel ="1" attrs="{'invisible': [('rabatt_5', '=', False)]}" colspan="4"/>
                            <div class="o_row" colspan="6">
