                            </div>
                            <field name="rabatt_5_text" placeholder="Write rabatt 5% text..." nolabel ="1" attrs="{'invisible': [('rabatt_5', '=', False)]}" colspan="4"/>
                            <div class="o_row" colspan="6">
                                <field name="rabatt_10" nolabel="1" string="Show Rabatt 5%"/>
                                <strong><label for="rabatt_10" string="Show"/></strong>
                                <field name="rabatt_10_label"/>
                            </div>
                            <field name="rabatt_10_text" placeholder="Write rabatt 10% text..." nolabel ="1" attrs="{'invisible': [('rabatt_10', '=', False)]}" colspan="4"/>
                            <div class="o_row" colspan="6">
                                <field name="rabatt_40" nolabel="1" string="Show Rabatt 40%"/>
                                <strong><label for="rabatt_40" string="Show"/></strong>
                                <field name="rabatt_40_label"/>
                            </div>
                            <field name="rabatt_40_text" placeholder="Write rabatt 40% text..." nolabel ="1" attrs="{'invisible': [('rabatt_40', '=', False)]}" colspan="4"/>
                            <div class="o_row" colspan="6">
                                <field name="rabatt_u" nolabel="1" string="Show Rabatt U"/>
                                <strong><label for="rabatt_u" string="Show"/></strong>
                                <field name="rabatt_u_label"/>
                            </div>
                            <field name="rabatt_u_text" placeholder="Write rabatt U text..." nolabel ="1" attrs="{'invisible': [('rabatt_u', '=', False)]}" colspan="4"/>
                            <div class="o_row" colspan="6">
                                <field name="rabattreduktion" nolabel="1" string="Show Rabatt Reduktion"/>
                                <strong><label for="rabattreduktion" string="Show"/></strong>
                                <field name="rabattreduktion_label"/>
                            </div>
                            <field name="rabattreduktion_text" placeholder="Write rabatt reduktion text..." nolabel ="1" attrs="{'invisible': [('rabattreduktion', '=', False)]}" colspan="4"/>
                            <separator string=" "/>
                            <div class="o_row" colspan="6">
                                <field name="garantie" nolabel="1" string="Show Garantie"/>
