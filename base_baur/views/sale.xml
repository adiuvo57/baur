                                <field name="garantie_label"/>
                            </div>
                            <field name="garantie_text" placeholder="Write garantie text..." nolabel ="1" attrs="{'invisible': [('garantie', '=', False)]}" colspan="4"/>                             
                            <div class="o_row" colspan="6">
